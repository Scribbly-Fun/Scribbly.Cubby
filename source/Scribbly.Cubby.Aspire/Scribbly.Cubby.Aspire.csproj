<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
        <CubbyContainerImageTag>0.1.0-24-http-client.1</CubbyContainerImageTag>
    </PropertyGroup>

    <ItemGroup>
        <CompilerVisibleProperty Include="CubbyContainerImageTag" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Aspire.Hosting" />
    </ItemGroup>

    
    <ItemGroup>
        <ProjectReference Include="..\Scribbly.Cubby.Aspire.Analyzer\Scribbly.Cubby.Aspire.Analyzer.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false"
                          PrivateAssets="all" />
    </ItemGroup>

    <!--  Here we are conditionally packing the assembly only when running dotnet pack -P:IsPacking='true' 
      This ensures our local project reference assembly isn't included twice.  See Cookbook.Api.csproj for direct project refernece.-->
    <ItemGroup Condition="'$(IsPacking)' == 'true'">
        <None Include="..\Scribbly.Cubby.Aspire.Analyzer\bin\$(Configuration)\netstandard2.0\Scribbly.Cubby.Aspire.Analyzer.dll"
              Pack="true"
              PackagePath="analyzers/dotnet/cs"
              Visible="false" />
    </ItemGroup>

</Project>
